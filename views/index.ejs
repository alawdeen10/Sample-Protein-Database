<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="styles/main.css">
    <title>Search Engine</title>
</head>
<body>

    <header>
        <h1 class="logo">PAK1 Database</h1>
        <nav class="navigation">
          <a href="#">Home</a>
          <a href="#">About</a>
          <a href="#">Contact</a>
          <button class="btnLogin-popup">Log In</button>
        </nav>
      </header>
    

        <div class="wrapper">
            <div class="form-box search">
              <h1>Find your protein</h1>
              <form action="/search" method="post">
                <div class="input-box">
                  <input type="text" name="query" placeholder="Type your protein name" autocomplete="off">
                  <button type="submit" class="btn">Search</button>
                </div>
              </form>
            </div>
          </div>


    <div class="parent">
        <% if (results && results.length > 0) { %>
            <h2 class="child one">Your Protein.jpg</h2>
            <% results.forEach(result => { %>
                <div class="child two"><span class="name-info">Protein Name: <%= result.Protein_Name %></span></div>
                <div class="child three"><span class="name-info">Description: <%= result.Description %></span></div>
                <div class="child four"><span class="name-info">Molecular Weight: <%= result.Molecular_Weight %></span></div>
                <div class="child five"><span class="name-info">Function: <%= result.Purpose %></span></div>
                <div class="child six"><span class="name-info">Source Organism: <%= result.Source_Organism %></span></div>
            <% }); %>
        <% } %>
      </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
